<UserControl x:Class="ExcelAppCR.View.UserControls.ExcelUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExcelAppCR.View.UserControls"
             mc:Ignorable="d" 
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="White"
         BorderBrush="Gray"
         BorderThickness="1"
         CornerRadius="10">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Border Margin="10"
                    BorderThickness="1"
                    BorderBrush="Gray"
                    CornerRadius="10">
                <DataGrid Background="Transparent"
                        BorderBrush="Transparent" 
                        BorderThickness="0"
                        AutoGenerateColumns="True" 
                        EnableRowVirtualization="True"
                        IsReadOnly="True" 
                        VirtualizingPanel.IsVirtualizing="True" 
                        VirtualizingPanel.VirtualizationMode="Recycling"
                        ItemsSource="{Binding ExcelData}"
                        Margin="5">
                </DataGrid>
            </Border>

            <Grid Grid.Row="1">
                <TextBlock HorizontalAlignment="Left" 
                           FontWeight="Medium"
                           VerticalAlignment="Center"
                           FontSize="20">
                     <Run Text="Total Row :"/>
                     <Run Text="{Binding RowCount , Mode=TwoWay , UpdateSourceTrigger=PropertyChanged}"/>
                </TextBlock>

                <StackPanel HorizontalAlignment="Right"
                            Orientation="Horizontal">
                    <Button Style="{StaticResource btnNP }">
                        <Image Source="/Images/backP.png"/>
                    </Button>
                    <TextBlock Text=" of "
                               FontWeight="Medium"
                               FontSize="25"
                               VerticalAlignment="Center"/>
                    <Button Style="{StaticResource btnNP}" >
                        <Image Source="/Images/nextP.png"/>
                    </Button>
                </StackPanel>

            </Grid>
        </Grid>

    </Border>
</UserControl>
