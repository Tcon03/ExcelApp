<Window x:Class="ExcelAppCR.View.ExcelAppCRMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExcelAppCR.View"
        x:Name="_this"
        xmlns:viewModel="clr-namespace:ExcelAppCR.ViewModel"
        mc:Ignorable="d"
        Icon="/Images/1excel.png"
        Title="ExcelAppCRMain" Height="450" Width="800">
    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel>
                <Menu Background="#21A366">
                    <MenuItem 
                         Header="_File"
                         Style="{StaticResource MenuItemStyle}">
                        <MenuItem 
                             Header="_New"
                             Foreground="Black" />
                        <MenuItem 
                             Header="_Open"
                             Foreground="Black" 
                             CommandParameter="{Binding ElementName=_this}"
                             Command="{Binding OpenExcelCommand}"/>

                        
                        <MenuItem 
                             Header="_Save"
                             Foreground="Black" 
                             Command="{Binding SaveFileCommand}"
                             CommandParameter="{Binding ElementName=_this}" />
                        <Separator/>
                        <MenuItem Header="E_xit" 
                                   Foreground="Black" />
                    </MenuItem>
                </Menu>
            </StackPanel>
        </Grid>


        <Grid Grid.Row="1">
            <Border Margin="10"
                 BorderThickness="1"
                 BorderBrush="Gray"
                 CornerRadius="10">
                <DataGrid Background="Transparent"
                       BorderBrush="Transparent" 
                       BorderThickness="0"
                       AutoGenerateColumns="True" 
                       EnableRowVirtualization="True"
                       IsReadOnly="True" 
                       VirtualizingPanel.IsVirtualizing="True" 
                       VirtualizingPanel.VirtualizationMode="Recycling"
                       ItemsSource="{Binding ExcelData}"
                       Margin="5">
                </DataGrid>
            </Border>

        </Grid>
        <Grid Grid.Row="3">
        </Grid>

    </Grid>
</Window>
